<div class="container pt-4 mt-4">
  <h1 class="my-4">Restaurants 🍕🌯🍔</h1>
  <% @restaurants.each do |restaurant| %>
    <div class="pt-3 border-bottom bg-white p-3">
      <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
      <div class="d-flex">
        <div class="pr-4">
          <p>Location: <%= restaurant.address %></p>
          <p>Phone Numer: <%= restaurant.phone_number %></p>
        </div>
        <div>
          <p>Category: <%= restaurant.category %></p>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to "Add Restaurant", new_restaurant_path, class: "btn btn-primary my-4" %>
</div>
